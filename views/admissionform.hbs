    <title>Admission Form</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins&family=Roboto+Slab&display=swap');
*{
    margin:0;
    padding:0;
    box-sizing: border-box;
    font-family: 'Poppins',sans-serif;
}
body{
    min-height:100vh;
    display:flex;
    align-items: center;
    justify-content: center;
    background:  url('https://www.nitp.ac.in/static/38e3ca6dcde2d64b3a8dd024e041b302/d8255/homebg-1.jpg') center/cover no-repeat;
}
.container{
    background-color: gainsboro;
    position:relative;
    max-width:900px;
    width:100%;
    border-radius: 6px;
    padding: 30px;
    margin:0 15px;
    overflow: hidden;
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
}
 .container header{
    position: relative;
    font-size: 20px;
    font-weight: 600;
    color:#333;
}
.container header::before{
    content:"";
    position: absolute;
    left: 0;
    bottom:-2px;
    height:3px;
    width:27px;
    border-radius: 8px;
    background-color:#4070f4 ;
}
.container form{
    position: relative;
    margin-top:16px;
    max-height: 390px;
    overflow: auto; 
    background-color: gainsboro;
}
.container form .details{
    margin-top: 30px;
}
.container form .details.address{
    margin-top: 10px;
}
.container form .details.exam{
    margin-top: 10px;
}
.container form .details.program{
    margin-top: 10px;
}
.container form .details.account{
    margin-top: 10px;
}
.container form .title{
    display: block;
    margin-bottom: 8px;
    font-size:16px;
    font-weight: 500;
    margin: 6px 0;
    color:#333;
}
.container form .fields{
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap:wrap;
}
form .fields .input-field{
    display: flex;
    width:calc(100%/3 - 15px);
    flex-direction: column;
    margin: 4px 0;
}
.input-field label{
    font-size: 12px;
    font-weight: 500;
    color:#2e2e2e;
}
.input-field input{
    outline: none;
    font-size: 14px;
    font-weight: 400;
    color: #333;
    border-radius: 5px;
    border:1px solid #aaa;
    padding: 0 15px;
    height: 42px;
    margin: 8px 0;
} 
.input-field input:is(:focus,:valid){
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.13);
}
.input-field input[type="date"]{
    color: #707070;
}
.input-field input[type="date"]:valid{
    color: #333;
}
.container .form .btnRegister{
    border:none;
    width:164px;
    height:50px;
    margin:auto;
    margin-top: 40px;
    cursor: pointer;
    display: flex;
    align-items:center;
    justify-content: center;
    padding-left: 0;
    background: #4070f4;
    font-size: 15px;
    color:#fff;
}
@media(max-width:750px){
    .container form{
        overflow-y: scroll;
    }
    .container form::-webkit-scrollbar{
        display: none;
    }
    form .fields .input-field{
        width:calc(100%/2 - 15px);
    }
}
@media(max-width:550px){
    form .fields .input-field{
        width:calc(100%/2 - 15px);
    }
}
    </style>
</head>
<body>
    <div class="container">
        <header>Admission Form</header>
        <form action="/admissionform" method="POST">
            <div class="form first">
                <div class="details personal">
                    <span class="title">Student Personal Details</span>
                    <div class="fields">
                        <div class="input-field">
                            <label>Student Name</label>
                            <input type="text" placeholder="Enter your name" name="name" >
                        </div>

                        <div class="input-field">
                            <label>Father Name</label>
                            <input type="text" placeholder="Enter your father's name" name="fathername" >
                        </div>

                        <div class="input-field">
                            <label>Mother Name</label>
                            <input type="text" placeholder="Enter your mother's name" name="mothername" >
                        </div>

                        <div class="input-field">
                            <label>Email</label>
                            <input type="email" placeholder="Enter your mail" name="email" >
                        </div>

                        <div class="input-field">
                            <label>Date of Birth</label>
                            <input type="date" placeholder="Enter birth date" name="dob" >
                        </div>

                        <div class="input-field">
                            <label>Blood Group</label>
                            <input type="text" placeholder="Enter your blood group" name="bloodgp" >
                        </div>
                        
                        <div class="input-field">
                            <label>Contact Number</label>
                            <input type="Number" placeholder="Enter mobile number" name="mobileno" >
                        </div>

                        <div class="input-field">
                            <label>Nationality</label>
                            <input type="text" placeholder="Enter your nationality" name="nationality" >
                        </div>
                        
                        <div class="input-field">
                            <label>Religion</label>
                            <input type="text" placeholder="Enter you religion" name="religion">
                        </div>
                        
                    </div>
                </div>

                <div class="form first">
                    <div class="details address">
                        <span class="title">Address Details</span>
                        <div class="fields">
                            <div class="input-field">
                                <label>Permanent Address</label>
                                <input type="text" placeholder="Enter you address" name="address" >
                            </div>
    
                            <div class="input-field">
                                <label>State</label>
                                <input type="text" placeholder="Enter your state" name="state" >
                            </div>
    
                            <div class="input-field">
                                <label>PinCode</label>
                                <input type="number" placeholder="Enter your pincode" name="pincode" >
                            </div>
                            
                            <div class="input-field">
                                <label>Corres Address</label>
                                <input type="text" placeholder="Enter your corres. address" name="corresaddress" >
                            </div>
    
                            <div class="input-field">
                                <label>State</label>
                                <input type="text" placeholder="Enter your state" name="corresstate" >
                            </div>
                            
                            <div class="input-field">
                                <label>PinCode</label>
                                <input type="number" placeholder="Enter your pincode" name="correspincode" >
                            </div>
                            
                        </div>
                    </div>

                    <div class="details exam">
                        <span class="title">Selection Exam Details For Program</span>
                        <div class="fields">
                            <div class="input-field">
                                <label>Selection Exam Appeared</label>
                                <input type="text" placeholder="Enter the exam" name="exam" >
                            </div>
    
                            <div class="input-field">
                                <label>Year</label>
                                <input type="number" placeholder="Enter the year" name="year" >
                            </div>
    
                            <div class="input-field">
                                <label>Selection Exam Roll No</label>
                                <input type="number" placeholder="Enter the roll no" name="selectionexamrollno">
                            </div>
    
                            <div class="input-field">
                                <label>All India Rank</label>
                                <input type="number" placeholder="Enter your all india rank" name="rank" >
                            </div>
    
                            <div class="input-field">
                                <label>Selection Exam Score</label>
                                <input type="number" placeholder="Enter the score" name="score" >
                            </div>
                           
                            <div class="input-field">
                                <label>Qualifying Exam Degree</label>
                                <input type="text" placeholder="Enter the exam details" name="degree" >
                            </div>

                            </div>
                    </div>

                    <div class="details program">
                        <span class="title">Program Admission Details</span>
                        <div class="fields">
                            <div class="input-field">
                                <label>Branch Name</label>
                                <input type="text" placeholder="Enter the branch name" name="branchname" >
                            </div>
    
                            <div class="input-field">
                                <label>Course Name</label>
                                <input type="text" placeholder="Enter the course name" name="coursename">
                            </div>
    
                            <div class="input-field">
                                <label>Course-Session</label>
                                <input type="number" placeholder="Enter the admission session" name="session" >
                            </div>
    
                            <div class="input-field">
                                <label>Date of Admission</label>
                                <input type="date" placeholder="Enter admission date" name="admissiondate" >
                            </div>
    
                            <div class="input-field">
                                <label>Enrollment Number</label>
                                <input type="number" placeholder="Enter enrollment number" name="eno">
                            </div>
    
                            <div class="input-field">
                                <label>Roll no</label>
                                <input type="text" placeholder="Enter your roll no" name="rollno" >
                            </div>

                            <div class="input-field">
                                <label>Admission No</label>
                                <input type="number" placeholder="Enter admission no" name="admissionno" >
                            </div>
    
                            <div class="input-field">
                                <label>Current Session</label>
                                <input type="number" placeholder="Enter current session" name="currentsession">
                            </div>
    
                            <div class="input-field">
                                <label>Current Semester</label>
                                <input type="number" placeholder="Enter current semester" name="currentsemester" >
                            </div>
                        </div>
                    </div>
                              
                    <div class="details account">
                        <span class="title">Admission Fee Details</span>
                        <div class="fields">
                            <div class="input-field">
                                <label>Payment Mode</label>
                                <input type="text" placeholder="Enter the mode" name="paymentmode">
                            </div>
    
                            <div class="input-field">
                                <label>Amount</label>
                                <input type="number" placeholder="Enter the amount" name="amount" >
                            </div>
    
                            <div class="input-field">
                                <label>Payment Date</label>
                                <input type="date" placeholder="Enter the date" name="paymentdate">
                            </div>
    
                            <div class="input-field">
                                <label>Bank</label>
                                <input type="text" placeholder="Enter your bank" name="bankname" >
                            </div>
    
                            <div class="input-field">
                                <label>Year of Admission</label>
                                <input type="number" placeholder="Enter the year" name="yearofpayment" >
                            </div>
    
                            <div class="input-field">
                                <label>Password</label>
                                <input type="password" placeholder="Enter the password" name="password">
                            </div>
                        </div>

                        <input type="submit" class="btnRegister" value="Submit"/>
                    </div>
            </div>
        </form>
    </div>
