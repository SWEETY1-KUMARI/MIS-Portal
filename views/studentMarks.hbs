    display: block;
    margin-bottom: 5px;
    color: #333; /* Change color as needed */
}

/* Style for the search input */
input[type="text"] {
    width: 100%;
    padding: 10px;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 5px;
    transition: border-color 0.3s ease;
}

